options {
    directory "/var/cache/bind";
    listen-on port 53{ any; };      // Ã©coute tout les interface sur le port par default.

    allow-recursion {
        none;
    };
    allow-transfer {
        none;
    };
    allow-update {
        none;
    };
    forwarders {
        1.1.1.1;
        1.0.0.1;
    };

    dnssec-validation auto;
    auth-nxdomain no;
};